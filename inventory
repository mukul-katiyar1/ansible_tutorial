#The [group] denotes which group the hosts belong to. Useful in case of running different instructions on different set of machines.
#The variables apache_package and php_package refer to the package names in case of different GNU/Linux distributions like Ubuntu and CentOS
[web_servers]
192.168.1.9 apache_package=apache2 php_package=libapache2-mod-php

[db_servers]
192.168.1.10 apache_package=apache2 php_package=libapache2-mod-php

[file_servers]
192.168.1.12 apache_package=apache2 php_package=libapache2-mod-php
#CentOS_IP_Address apache_package=hhtpd php_package=php

[workstations]
192.168.1.8 apache_package=apache2 php_package=libapache2-mod-php
